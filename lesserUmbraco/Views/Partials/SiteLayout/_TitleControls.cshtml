@inherits UmbracoTemplatePage

<div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
    <h1>@(Umbraco.AssignedContentItem.HasProperty("title")
                          && Umbraco.AssignedContentItem.GetPropertyValue("title") != null
                          && !string.IsNullOrEmpty(Umbraco.AssignedContentItem.GetPropertyValue("title").ToString())
                          ? Umbraco.AssignedContentItem.GetPropertyValue("title")
                          : Umbraco.AssignedContentItem.Name)</h1>
    @Html.Raw(@Umbraco.AssignedContentItem.GetPropertyValue("subTitle"))
</div>